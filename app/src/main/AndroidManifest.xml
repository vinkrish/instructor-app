<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aanglearning.instructorapp">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".login.LoginActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".dashboard.DashboardActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBar" />
        <activity android:name="com.darsh.multipleimageselect.activities.AlbumSelectActivity">
            <intent-filter>
                <category android:name="ANDROID.INTENT.CATEGORY.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".newgroup.NewGroupActivity"
            android:label="@string/title_activity_new_group"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBar"
            android:windowSoftInputMode="stateHidden|adjustResize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".dashboard.DashboardActivity" />
        </activity>
        <activity
            android:name=".usergroup.UserGroupActivity"
            android:label="@string/title_activity_user_group"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.UserGroupTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".messagegroup.MessageActivity" />
        </activity>
        <activity
            android:name=".messagegroup.MessageActivity"
            android:label="@string/title_activity_message"
            android:theme="@style/NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".dashboard.DashboardActivity" />
        </activity>
        <activity android:name=".messagegroup.ImageUploadActivity"
            android:label="@string/upload_image">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".messagegroup.MessageActivity" />
        </activity>
        <service
            android:name="com.amazonaws.mobileconnectors.s3.transferutility.TransferService"
            android:enabled="true" />
    </application>

</manifest>